<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/black_opacity"
             android:orientation="vertical"
             android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rect_white_big_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/dialog_balance_prompt_fl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rect_green_opacity_corner"
            android:paddingBottom="30dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/dialog_balance_prompt_tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage"/>

        </FrameLayout>

        <TextView
            android:id="@+id/dialog_balance_prompt_tv_balance_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/balance_prompt"
            android:textColor="@color/black_2"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:ignore="SpUsage"/>

        <Button
            android:id="@+id/dialog_balance_prompt_bnt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_green_white_rect"
            android:text="@string/got_it"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/selector_white_green_color"
            android:textSize="15dp"
            tools:ignore="SpUsage"/>

    </LinearLayout>

</FrameLayout>